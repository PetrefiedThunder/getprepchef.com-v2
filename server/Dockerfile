# Multi-stage Dockerfile for PrepChef server

# Stage 1: Build
FROM node:20-alpine AS builder

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./

# Install dependencies (including devDependencies for build)
RUN npm ci

# Copy source code
COPY src ./src

# Build TypeScript
RUN npm run build

# Prune dev dependencies
RUN npm prune --production

# Stage 2: Production
FROM node:20-alpine AS production

# Add non-root user for security
RUN addgroup -g 1001 -S nodejs && \
    adduser -S prepchef -u 1001

WORKDIR /app

# Copy package files and production dependencies
COPY --from=builder --chown=prepchef:nodejs /app/package*.json ./
COPY --from=builder --chown=prepchef:nodejs /app/node_modules ./node_modules

# Copy built application
COPY --from=builder --chown=prepchef:nodejs /app/dist ./dist

# Create uploads directory
RUN mkdir -p /app/uploads && chown prepchef:nodejs /app/uploads

# Switch to non-root user
USER prepchef

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s --retries=3 \
  CMD node -e "require('http').get('http://localhost:3000/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"

# Start server
CMD ["node", "dist/server.js"]
