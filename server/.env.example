# Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb://mongodb:27017/prepchef
MONGODB_MAX_POOL_SIZE=10

# Redis (for BullMQ)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -hex 32
JWT_ACCESS_SECRET=your-jwt-access-secret-min-32-chars-change-me-in-production-please
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-32-chars-change-me-in-production-too
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# File Storage
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads
# S3_BUCKET=
# S3_REGION=
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=

# Webhook
WEBHOOK_SIGNING_SECRET=dev-webhook-secret-change-in-production-min-32-chars
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_MAX_RETRIES=3

# External Services (optional for MVP)
# SENDGRID_API_KEY=
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
BCRYPT_ROUNDS=12

# Background Jobs
VERIFICATION_JOB_CONCURRENCY=5
REG_CLEARINGHOUSE_CRON=0 8,12,20 * * *

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
