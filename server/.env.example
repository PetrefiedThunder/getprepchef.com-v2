# Environment Configuration
# Copy this file to .env and update with your values

# Node Environment
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Database
MONGODB_URI=mongodb://mongodb:27017/prepchef
MONGODB_MAX_POOL_SIZE=10

# Redis (for BullMQ)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate with: openssl rand -hex 32
JWT_ACCESS_SECRET=your-jwt-access-secret-min-32-chars-change-me-in-production-please
JWT_REFRESH_SECRET=your-jwt-refresh-secret-min-32-chars-change-me-in-production-too
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# File Storage (S3)
S3_BUCKET_NAME=prepchef-vendor-docs
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# Webhook
WEBHOOK_SIGNING_SECRET=dev-webhook-secret-change-in-production-min-32-chars
WEBHOOK_TIMEOUT_MS=5000
WEBHOOK_MAX_RETRIES=3

# Email Notifications (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=notifications@prepchef.com

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15555555555

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Security
BCRYPT_ROUNDS=12

# Background Jobs
VERIFICATION_JOB_CONCURRENCY=5
REG_CLEARINGHOUSE_CRON=0 8,12,20 * * *

# Feature Flags
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
